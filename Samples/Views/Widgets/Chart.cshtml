@{
    ViewBag.WidgetName = "Chart";
}

<dx-chart>
    <datasource controller="Northwind" load-action="SalesByCategoryYear" />
    <common-series-settings argument-field="category" value-field="sales" type="Bar" />
    <series-template name-field="year" />

    <value-axis>
        <label format="Currency" />
    </value-axis>

    <title text="Sales By Category/Year" />
    <legend vertical-alignment="Bottom" horizontal-alignment="Center" />
    <tooltip enabled="true" format="Currency" />
</dx-chart>