@{
    ViewBag.WidgetName = "Chart";
}

<dx-chart>
    <datasource controller="Northwind" load-action="SalesByCategoryYear" />
    <common-series-settings argument-field="Category" value-field="Sales" type="SeriesType.Bar" />
    <series-template name-field="Year" />

    <value-axis>
        <label format="Format.Currency" />
    </value-axis>

    <title text="Sales By Category/Year" />
    <legend vertical-alignment="VerticalEdgeAlignment.Bottom" horizontal-alignment="HorizontalAlignment.Center" />
    <tooltip enabled="true" format="Format.Currency" />
</dx-chart>