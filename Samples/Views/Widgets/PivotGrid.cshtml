@{
    ViewBag.WidgetName = "Pivot Grid";
}

<dx-pivot-grid height="500" allow-expand-all="true" allow-sorting="true" allow-sorting-by-summary="true" allow-filtering="true">

    <datasource controller="Northwind" load-action="SalesCube">
        <field datafield="CategoryName" area="PivotGridArea.Row" width="120" />
        <field datafield="ProductName" area="PivotGridArea.Row" width="150" />
        <field datafield="OrderDate" area="PivotGridArea.Column" datatype="PivotGridDataType.Date" />
        <field datafield="Sum" datatype="PivotGridDataType.Number" summary-type="SummaryType.Sum" format="Format.Currency" area="PivotGridArea.Data" />
    </datasource>

    <field-chooser enabled="true" layout="PivotGridFieldChooserLayout.Layout0" />
    <scrolling mode="PivotGridScrollingMode.Virtual" />
</dx-pivot-grid>