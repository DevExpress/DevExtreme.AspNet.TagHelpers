@{
    ViewBag.WidgetName = "Pivot Grid";
}

<dx-pivot-grid height="500" allow-expand-all="true" allow-sorting="true" allow-sorting-by-summary="true" allow-filtering="true">

    <datasource controller="Northwind" load-action="SalesCube">
        <field datafield="categoryName" area="Row" width="120" />
        <field datafield="productName" area="Row" width="150" />
        <field datafield="orderDate" area="Column" datatype="Date" />
        <field datafield="sum" datatype="Number" summary-type="Sum" format="Currency" area="Data" />
    </datasource>

    <field-chooser enabled="true" layout="Layout0" />
    <scrolling mode="Virtual" />
</dx-pivot-grid>