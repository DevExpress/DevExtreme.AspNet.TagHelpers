@{
    ViewBag.WidgetName = "Range Selector";
}

<dx-range-selector>
    <datasource url='@Url.Action("ShipsByMonth", "Northwind", new { shipper = "Federal Shipping" })' />

    <margin top="50" />
    <size height="400" />

    <chart>
        <common-series-settings type="StepArea" argument-field="month" />
        <series value-field="totalAmount" color="yellow" />
        <series value-field="amount" />
    </chart>

    <scale value-type="DateTime" tick-interval="new { months = 1 }" minor-tick-interval="new { months = 1 }" />
    <slider-marker format="MonthAndYear" />
</dx-range-selector>