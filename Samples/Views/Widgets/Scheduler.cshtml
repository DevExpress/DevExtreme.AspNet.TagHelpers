@{
    ViewBag.WidgetName = "Scheduler";
}

<dx-scheduler height="600" current-date="new DateTime(2015, 5, 25)" first-day-of-week="Sunday"
              views="new[] { SchedulerView.Week, SchedulerView.Month }" current-view="Month" remote-filtering="true"
              recurrence-rule-expr="">
    <datasource controller="GoogleCalendar" load-action="Appointments" />
    <editing allow-adding="false" allow-deleting="false" allow-resizing="false" allow-dragging="false" allow-updating="false" />
</dx-scheduler>
